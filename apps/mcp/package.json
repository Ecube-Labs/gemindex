{
  "name": "@gemindex/mcp",
  "version": "1.0.0",
  "description": "MCP stdio proxy CLI for GemIndex with OAuth2 Proxy support",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ecube-Labs/gemindex.git",
    "directory": "apps/mcp"
  },
  "bugs": {
    "url": "https://github.com/Ecube-Labs/gemindex/issues"
  },
  "homepage": "https://github.com/ecubelabs/gemindex/tree/main/apps/mcp#readme",
  "keywords": [
    "mcp",
    "gemindex",
    "gemini",
    "file-search",
    "oauth",
    "oauth2-proxy"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "gemindex-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "playwright": "^1.50.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.2",
    "semantic-release": "^24.2.1",
    "semantic-release-yarn": "^3.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "mcp-v${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "docs",
              "scope": "README",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "perf",
                "section": "Performance"
              },
              {
                "type": "refactor",
                "section": "Refactoring"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "chore",
                "hidden": true
              }
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "semantic-release-yarn",
        {
          "npmPublish": true,
          "tarballDir": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): mcp ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "releasedLabels": [
            "released"
          ]
        }
      ]
    ]
  }
}
